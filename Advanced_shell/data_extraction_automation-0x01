#!/bin/bash

# Data Extraction Script
# Extracts name, height, weight, and type from Pok√©mon JSON data  
# Uses jq, awk, and sed for text manipulation

JSON_FILE="data.json"

# Check if JSON file exists
if [ ! -f "${JSON_FILE}" ]; then
    echo "Error: ${JSON_FILE} not found"
    exit 1
fi

# Extract data using jq, awk, and sed
name=$(jq -r '.name' "${JSON_FILE}" | sed 's/\b\(.\)/\u\1/g')

# Extract height (in decimeters, convert to meters using awk)
height=$(jq -r '.height' "${JSON_FILE}")
formatted_height=$(echo "${height}" | awk '{printf "%.1f", $1/10}')

# Extract weight (in hectograms, convert to kg using awk)
weight=$(jq -r '.weight' "${JSON_FILE}")
formatted_weight=$(echo "${weight}" | awk '{printf "%.0f", $1/10}')

# Extract type and capitalize first letter using sed
type=$(jq -r '.types[0].type.name' "${JSON_FILE}" | sed 's/\b\(.\)/\u\1/g')

# Format and output result
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."

